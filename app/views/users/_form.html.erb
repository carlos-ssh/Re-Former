<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |error| %>
      <p><%= error %></p>
    <% end %>
  <% end %>
  <div>
    <%= f.label :username, "Username:" %>
    <%= f.text_field :username, placeholder: "Username:" %>
    <br>
    <%= f.label :email, "Email:" %>
    <%= f.email_field :email, placeholder: "juan@example.com " %>
    <br>
    <%= f.label :password, "Password:" %>
    <%= f.password_field :password, placeholder: "Petarda$" %>
    <br>
    
    <%= f.submit %>
  </div>
<% end %>